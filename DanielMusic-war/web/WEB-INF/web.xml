<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <!--    <filter-mapping>
        <filter-name>HttpsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>HttpsFilter</filter-name>
        <filter-class>Client.HttpsFilter</filter-class>
    </filter>-->
    <servlet>
        <servlet-name>GenreManagementController</servlet-name>
        <servlet-class>Admin.GenreManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MusicManagementController</servlet-name>
        <servlet-class>Client.MusicManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountManagementController</servlet-name>
        <servlet-class>Admin.AccountManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientAccountManagementController</servlet-name>
        <servlet-class>Client.ClientAccountManagementController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MusicController</servlet-name>
        <servlet-class>Client.MusicController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenreManagementController</servlet-name>
        <url-pattern>/GenreManagementController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MusicManagementController</servlet-name>
        <url-pattern>/MusicManagementController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountManagementController</servlet-name>
        <url-pattern>/AccountManagementController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientAccountManagementController</servlet-name>
        <url-pattern>/ClientAccountManagementController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MusicController</servlet-name>
        <url-pattern>/MusicController</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>
    <error-page>
        <location>/error.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
